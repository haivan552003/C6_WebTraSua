@code {
    [Inject]
    public NavigationManager NV { get; set; }

    string url = "http://localhost:20714/api/Users";

    public IEnumerable<WebTraSua.Model.User> US { get; set; } = Enumerable.Empty<WebTraSua.Model.User>();

    protected async override Task OnInitializedAsync()
    {
        await CallAPI();
    }

    async Task CallAPI()
    {
        using (var httpClient = new HttpClient())
        {
            using (var response = await httpClient.GetAsync(url))
            {
                string apiResponse = await response.Content.ReadAsStringAsync();
                US = JsonConvert.DeserializeObject<List<WebTraSua.Model.User>>(apiResponse);
            }
        }
    }
}
